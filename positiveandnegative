def classify_number(num: int) -> str:
    if num < 0:
        return "The number is negative."
    elif num == 0:
        return "The number is zero."
    else:
        return "The number is positive."

# Example usage
print(classify_number(-5))  # Output: The number is negative.
print(classify_number(0))  # Output: The number is zero.
print(classify_number(3))  # Output: The number is positive.
